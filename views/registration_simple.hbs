<script src="/js/registration.js"></script>
<form id="registration_form" class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>{{dictionary.reg}}</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_firstname">{{dictionary.first_name }}</label>
            <div class="col-md-4">
                <input id="input_firstname" name="input_firstname" type="text" placeholder="{{dictionary.first_name }}" class="form-control input-md" required="">
                <span id="firstname_span" class="error" hidden>{{dictionary.first_name_error }}</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="input_FIO">{{dictionary.last_name }}</label>
            <div class="col-md-4">
                <input id="input_lastname" name="input_lastname" type="text" placeholder="{{dictionary.last_name }}" class="form-control input-md" required="">
                <span id="lastname_span" class="error" hidden>{{dictionary.last_name_error  }}</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="input_FIO">{{dictionary.company }}</label>
            <div class="col-md-4">
                <input id="input_company" name="input_company" type="text" placeholder="{{dictionary.company }}" class="form-control input-md" required="">
                <span id="span_company" class="error" hidden>{{dictionary.company_error }}</span>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_country">{{dictionary.country }}</label>
            <div class="col-md-4">
                <select id="input_country" name="input_country" class="form-control">

                </select>
                <span id="country_span" class="error" hidden>{{dictionary.country_error }}</span>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_oblast">{{dictionary.oblast }}</label>
            <div class="col-md-4">
                <select id="input_oblast" name="input_oblast" class="form-control">

                </select>
                <span id="oblast_span" class="error" hidden>{{dictionary.oblast_error }}</span>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_email">{{dictionary.email }}</label>
            <div class="col-md-4">
                <input id="input_email" name="input_email" type="text" placeholder="{{dictionary.email }}" class="form-control input-md" required="">
                <span id="email_span" class="error" hidden>{{dictionary.email_error }}</span>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_mobile">{{dictionary.mobile  }}</label>
            <div class="col-md-4">
                <input id="input_mobile" name="input_mobile" type="text" placeholder="{{dictionary.mobile  }}" class="form-control input-md" required="">
                <span id="mobile_span" class="error" hidden>{{dictionary.mobile_error }}</span>
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_password">{{dictionary.password }}</label>
            <div class="col-md-4">
                <input id="input_password" name="input_password" type="password" placeholder="{{dictionary.password }}" class="form-control input-md" required="">
                <span id="password_span" class="error" hidden>{{dictionary.password_error }}</span>

            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="input_re_password">{{dictionary.repassword }}</label>
            <div class="col-md-4">
                <input id="input_re_password" name="input_re_password" type="password" placeholder="{{dictionary.repassword }}" class="form-control input-md" required="">
                <span id="repassword_span" class="error" hidden>{{dictionary.repassword_error }}</span>
            </div>
        </div>





        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="btn_register"></label>
            <div class="col-md-4">
                <button id="btn_register" type="button" name="btn_register" class="btn btn-success btn-block">{{dictionary.reg_button}}</button>
            </div>
        </div>

    </fieldset>
</form>
