<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Меню сайта</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <a href="#"   class="btn btn-success add_menu_item"><span class="glyphicon glyphicon-plus-sign"></span> Добавить пункт меню</a>
        <br><br>
        <div class="table-responsive">
            <table class="table no-margin" >
                <thead>
                <tr>
                    <th style="text-align:center">ID пункта</th>
                    <th >Название</th>
                    <th style="text-align:center">Тип</th>
                    <th style="text-align:center">Страница / ссылка</th>
                    <th style="text-align:center">Отображение</th>
                    <th style="text-align:center">Сортировка</th>
                    <th style="text-align:center">Действия</th>
                </tr>
                </thead>
                <tbody>

            {{#each menu_items}}
                <tr>
                    <td style="vertical-align: middle;text-align:center" class="menu_id" >{{this.id}}</td>
                    <td style="vertical-align: middle">{{this.name}}</td>
                     {{#if this.subs}}
                         <td style="vertical-align: middle;text-align:center">Родительский</td>
                     {{else}}
                         <td style="vertical-align: middle;text-align:center">Обычный</td>
                     {{/if}}

                    <td style="vertical-align: middle;text-align:center">
                        {{#IFactive this.content_type 'link'}}  Ссылка {{this.link_ru}} {{/IFactive}}
                        {{#IFactive this.content_type 'content'}}  Страница ID = {{this.page_id}} {{/IFactive}}
                    </td>

                    <td style="vertical-align: middle;text-align:center">
                     {{#IFactive this.visible '1'}}  <span class="fa fa-check menu_visiable"></span> {{/IFactive}}
                     {{#IFactive this.visible '0'}}  <span class="fa fa-ban menu_visiable"></span> {{/IFactive}}
                    </td>

                    <td style="vertical-align: middle;text-align:center" class="menu_sort"><span class="menu_span_sort">{{this.sort}}</span>&nbsp;&nbsp;&nbsp;<span class="fa fa-arrow-up menu_sort_go_up"></span>&nbsp;&nbsp;&nbsp;<span class="fa fa-arrow-down menu_sort_go_down"></span> </td>
                    <td style="vertical-align: middle;text-align:center"><span class="fa  fa-pencil menu_edit"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa  fa-trash-o menu_del"></span></td>
                </tr>

                {{#if this.subs}}
                    {{#each this.subs}}
                    <tr>
                        <td style="vertical-align: middle;text-align:center" class="menu_id" >{{this.id}}</td>
                        <td style="vertical-align: middle">{{this.name}}</td>
                        <td style="vertical-align: middle;text-align:center">Дочерний root_id = {{this.root_id}}</td>
                        <td style="vertical-align: middle;text-align:center">
                            {{#IFactive this.content_type 'link'}}  Ссылка {{this.link_ru}} {{/IFactive}}
                            {{#IFactive this.content_type 'content'}}  Страница ID = {{this.page_id}} {{/IFactive}}
                        </td>
                        <td style="vertical-align: middle;text-align:center">
                            {{#IFactive this.visible '1'}}  <span class="fa fa-check menu_visiable"></span> {{/IFactive}}
                            {{#IFactive this.visible '0'}}  <span class="fa fa-ban menu_visiable"></span> {{/IFactive}}
                        </td>

                        <td style="vertical-align: middle;text-align:center" class="menu_sort"><span class="menu_span_sort">{{this.sort}}</span>&nbsp;&nbsp;&nbsp;<span class="fa fa-arrow-up menu_sort_go_up"></span>&nbsp;&nbsp;&nbsp;<span class="fa fa-arrow-down menu_sort_go_down"></span> </td>
                        <td style="vertical-align: middle;text-align:center"><span class="fa  fa-pencil menu_edit"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa  fa-trash-o menu_del"></span></td>
                    </tr>
                    {{/each}}
                {{/if}}

            {{/each}}

                </tbody>
            </table>
        </div><!-- /.table-responsive -->

    </div><!-- /.box-body -->
</div>


